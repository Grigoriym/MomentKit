<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Time Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:text="@string/widget_section_time"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_time_24h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="1dp"
        android:textSize="13sp"
        tools:text="00:00" />

    <TextView
        android:id="@+id/widget_time_12h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:textSize="13sp"
        tools:text="00:00 AM" />

    <!-- Date Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:text="@string/widget_section_date"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/widget_date_ddmmyyyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="1dp"
        android:textSize="12sp"
        tools:text="DD/MM/YYYY" />

    <TextView
        android:id="@+id/widget_date_mmddyyyy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="1dp"
        android:textSize="12sp"
        tools:text="MM/DD/YYYY" />

    <TextView
        android:id="@+id/widget_date_yyyymmdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:textSize="12sp"
        tools:text="YYYY/MM/DD" />

</LinearLayout>
